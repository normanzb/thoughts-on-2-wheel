<ul class="posts">
    {{#each collections.posts}}
    {{#if title}}
    <li onclick="window.location.href = '{{permalink}}/'">
        <h2 class="caption">
            <a href="{{permalink}}">{{#folder path}}{{/folder}}：{{title}}</a> <span class="date">\ {{dateFormat date "LL
                Z"}} \</span>
        </h2>
        {{#preview contents}}
        {{/preview}}
    </li>
    {{/if}}
    {{/each}}
</ul>